<div class="bg-gray-50 flex items-center justify-center min-h-screen">
    <div class="w-full max-w-xl p-8 space-y-6">
        
        {# Optional: Display success flash message after submission #}
        {% for message in app.flashes('success') %}
            <div class="bg-teal-100 border-l-4 border-teal-500 text-teal-700 p-4 rounded-md" role="alert">
                <p class="font-bold">Success!</p>
                <p>{{ message }}</p>
            </div>
        {% endfor %}

        <div class="bg-white p-8 rounded-2xl shadow-md border border-gray-200">
            <h2 class="text-3xl font-bold text-gray-900 text-center">Get in touch</h2>
            <p class="text-center text-gray-600 mt-2">
                Have a question or a project in mind? I'd love to hear from you.
            </p>

            {{ form_start(contactForm, {'attr': {'class': 'mt-8 space-y-6'}}) }}
                
                {# Name Field #}
                <div>
                    {{ form_label(contactForm.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.name, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-teal-500 focus:border-teal-500', 'placeholder': 'John Doe'}}) }}
                    <div class="text-red-600 text-sm mt-1 h-5">{{ form_errors(contactForm.name) }}</div>
                </div>
                
                {# Email Field #}
                <div>
                    {{ form_label(contactForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.email, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-teal-500 focus:border-teal-500', 'placeholder': 'you@example.com'}}) }}
                    <div class="text-red-600 text-sm mt-1 h-5">{{ form_errors(contactForm.email) }}</div>
                </div>

                {# Phone Field #}
                <div>
                    {{ form_label(contactForm.phone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.phone, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-teal-500 focus:border-teal-500', 'placeholder': '(123) 456-7890'}}) }}
                    <div class="text-red-600 text-sm mt-1 h-5">{{ form_errors(contactForm.phone) }}</div>
                </div>
                
                {# Message Field #}
                <div>
                    {{ form_label(contactForm.message, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(contactForm.message, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-teal-500 focus:border-teal-500', 'rows': 5, 'placeholder': 'Your message here...'}}) }}
                    <div class="text-red-600 text-sm mt-1 h-5">{{ form_errors(contactForm.message) }}</div>
                </div>

                {# Submit Button #}
                <div>
                    <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500 transition-colors">
                        Send Message
                    </button>
                </div>

            {{ form_end(contactForm) }}
        </div>
    </div>
</div>